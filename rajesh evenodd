#include<stdio.h>
int main(){
    int min,max,i,j;
    printf("Enter a minimun value:");
    scanf("%d",&min);
    printf("Enter a maximum value:");
    scanf("%d",&max);
    int array[max-min],even[((max-min)/2)],odd[((max-min)/2)];
    int even_len=0,odd_len=0;
    for(i=0,j=min;i<(max-min) && j<max;i++,j++)
    array[i]=j;
    for(i=0;i<(max-min);i++){
        if(array[i]%2==0){
            even[even_len]=array[i];
            even_len++;
        }
    }
    for(i=0;i<(max-min);i++){
        if(array[i]%2!=0){
            odd[odd_len]=array[i];
            odd_len++;
        }
    }
     printf("Even numbers in an Array:\n");
        for(i=0;i<even_len;i++){
            printf("%d ",even[i]);
        }
        printf("\n");
    printf("Odd numbers in an Array:\n");
        for(i=0;i<odd_len;i++){
         printf("%d ",odd[i]);
        }
        printf("\n");

    return 0;
}